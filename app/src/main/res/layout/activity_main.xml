<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.riyad.thinkt.MainActivity">

    <TextView
        android:id="@+id/nova_viagem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="80dp"
        android:clickable="true"
        android:gravity="center"
        android:drawableTop="@drawable/nova_viagem"
        android:onClick="novaViagem"
        android:text="Nova viagem"/>

    <TextView
        android:id="@+id/novo_gasto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/nova_viagem"
        android:layout_marginRight="50dp"
        android:clickable="true"
        android:gravity="center"
        android:drawableTop="@drawable/novo_gasto"
        android:onClick="novoGasto"
        android:text="Novo gasto"/>

    <TextView
        android:id="@+id/minhas_viagens"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/nova_viagem"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="120dp"
        android:clickable="true"
        android:gravity="center"
        android:drawableTop="@drawable/minhas_viagens"
        android:onClick="minhasViagens"
        android:text="Minhas viagens"/>

    <TextView
        android:id="@+id/perfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/minhas_viagens"
        android:layout_alignRight="@+id/novo_gasto"
        android:clickable="true"
        android:gravity="center"
        android:drawableTop="@drawable/negocios"
        android:onClick="meuPerfil"
        android:text="Meu perfil"/>

</RelativeLayout>
